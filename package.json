{
    "name": "stream-rtc",
    "version": "1.0.1",
    "type": "module",
    "description": " RTCPeerConnectionClient/RTCPeerConnectionServer: simple usage RTC peer connection to handle only what we need without to enter the details like STUN SDP ICE and so on, also great handler for stream functionality in classes like: ScreenRecorder ShareScreen StreamControls",
    "scripts": {
        "build": "tsc && vite build",
        "preview": "vite preview",
        "clean": "rimraf ./dist",
        "yalc:publish": "pnpm run build && yalc publish --private --push"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.umd.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "devDependencies": {
        "pathe": "^2.0.3",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.2",
        "vite-plugin-dts": "^4.5.4"
    },
    "keywords": [
        "stream",
        "mediastream",
        "screenrecorder",
        "rtc",
        "rtcpeerconnection",
        "socketio"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hdriel/stream-rtc.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hdriel/stream-rtc/issues"
    },
    "homepage": "https://github.com/hdriel/stream-rtc#readme",
    "author": "Hadriel Benjo (https://github.com/hdriel)"
}
