{
    "name": "stream-rtc",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "preview": "vite preview",
        "clean": "rimraf ./dist",
        "yalc:publish": "pnpm run build && yalc publish --private --push"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.umd.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "devDependencies": {
        "pathe": "^2.0.3",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.2",
        "vite-plugin-dts": "^4.5.4"
    }
}
